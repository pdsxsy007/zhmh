<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"

    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_margin="@dimen/dp10"
        android:layout_height="60dp">
      <ImageView
          android:layout_width="60dp"
          android:id="@+id/food_img"
          android:scaleType="fitXY"
          android:src="@mipmap/ic_launcher"
          android:layout_height="60dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/dp10"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textStyle="bold"
                android:id="@+id/food_name"
                android:text="大米"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp5"
                android:textSize="12sp"
                android:id="@+id/food_peiliao"
                android:text="大米小米大米米"
                />
       <LinearLayout
           android:layout_marginTop="@dimen/dp2"
           android:layout_width="match_parent"
           android:layout_height="0dp"
           android:orientation="horizontal"
           android:layout_weight="1"
           >
           <ImageView
               android:layout_width="@dimen/dp12"
               android:layout_height="@dimen/dp12"
               android:layout_gravity="center"
               android:src="@mipmap/ic_launcher"
               android:id="@+id/yunma_iv"
               />
            <TextView
                android:layout_marginLeft="@dimen/dp2"
                android:layout_width="wrap_content"
                android:text="孕妈"
                android:id="@+id/yunma_tv"
                android:textSize="12sp"
                android:layout_height="wrap_content" />
           <ImageView
               android:layout_marginLeft="@dimen/dp10"
               android:layout_width="@dimen/dp12"
               android:layout_height="@dimen/dp12"
               android:layout_gravity="center"
               android:id="@+id/yuezi_img"
               android:src="@mipmap/ic_launcher"
               />
           <TextView
               android:layout_marginLeft="@dimen/dp2"
               android:layout_width="wrap_content"
               android:text="坐月子"
               android:id="@+id/yuezi_tv"
               android:textSize="12sp"
               android:layout_height="wrap_content" />
           <ImageView
               android:layout_width="@dimen/dp12"
               android:layout_marginLeft="@dimen/dp10"
               android:layout_height="@dimen/dp12"
               android:layout_gravity="center"
               android:id="@+id/puru_img"
               android:src="@mipmap/ic_launcher"
               />
           <TextView
               android:layout_marginLeft="@dimen/dp2"
               android:layout_width="wrap_content"
               android:text="哺育"
               android:id="@+id/puru_tv"
               android:textSize="12sp"
               android:layout_height="wrap_content" />
           <ImageView
               android:layout_marginLeft="@dimen/dp10"
               android:id="@+id/yinyouer_img"
               android:layout_width="@dimen/dp12"
               android:layout_height="@dimen/dp12"
               android:layout_gravity="center"
               android:src="@mipmap/ic_launcher"
               />
           <TextView
               android:layout_marginLeft="@dimen/dp2"
               android:layout_width="wrap_content"
               android:id="@+id/yinyouer_tv"
               android:text="婴幼儿"
               android:textSize="12sp"
               android:layout_height="wrap_content" />
       </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>