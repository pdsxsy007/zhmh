<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/layout_head_title_one"
        android:id="@+id/id_title">

    </include>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">
        <RelativeLayout
            android:id="@+id/rl_top"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:background="@drawable/shape_juxing_bg_white"
            android:layout_centerInParent="true"
            >
            <io.cordova.zhqy.widget.XCRoundImageView
                android:id="@+id/iv_user_head"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:scaleType="centerCrop"
                />
        </RelativeLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_account_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="哈哈"
            android:textColor="@color/text_black_color"
            android:layout_centerInParent="true"
            android:layout_marginTop="2dp"
            android:textSize="16sp"/>
    </RelativeLayout>




    <ImageView
        android:id="@+id/iv_fingerprint_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="120dp"
        android:src="@mipmap/fingerprint_icon"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="12dp"
        android:text="点击进行指纹登录"
        android:textColor="@color/text_black_color"
        android:textSize="12sp"/>


    <TextView
        android:id="@+id/tv_fingerprint_login_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="120dp"
        android:text="更多"
        android:textColor="@color/text_black_color"
        android:textSize="16sp"/>

</LinearLayout>