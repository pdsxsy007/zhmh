<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dp1"
    android:background="@color/white"
    android:id="@+id/ll_go"
    android:orientation="horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android" >



    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="55dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <RelativeLayout
                android:id="@+id/rl_left"
                android:layout_width="80dp"
                android:layout_height="55dp"
                android:layout_centerVertical="true"
                >
                <ImageView
                    android:id="@+id/iv_app_img"
                    android:layout_width="55dp"
                    android:layout_height="50dp"
                    android:layout_centerInParent="true"
                    android:src="@mipmap/tabbar_find_pre"
                    />

                <ImageView
                    android:visibility="gone"
                    android:id="@+id/iv_del"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/dp10"
                    />


                <TextView
                    android:visibility="gone"
                    android:id="@+id/iv_lock_open"
                    android:layout_width="19dp"
                    android:layout_height="19dp"
                    android:background="@drawable/shape_juxing_bg_cheng"
                    android:text="一"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="12dp"
                    android:layout_alignParentRight="true"/>

                <ImageView
                    android:visibility="gone"
                    android:id="@+id/iv_lock_close"
                    android:layout_width="19dp"
                    android:layout_height="19dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="@dimen/dp5"
                    />

            </RelativeLayout>


        </RelativeLayout>




    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/tv_app_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/sp6"
                android:text="title"
                android:paddingLeft="@dimen/sp8"
                android:textColor="@color/black2"
                android:textSize="@dimen/sp14"/>
            <TextView
                android:id="@+id/tv_app_come"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/sp8"
                android:textColor="@color/gray1"
                android:textSize="@dimen/sp14"
                android:layout_marginTop="5dp"
                android:text="来源:"/>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            >
            <RelativeLayout
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_juxing_bg_blue"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/sp12"
                    android:text="进入"/>
            </RelativeLayout>

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>
