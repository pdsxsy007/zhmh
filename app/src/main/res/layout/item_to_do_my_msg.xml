<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginTop="@dimen/dp1"
    android:background="@color/white"
    android:id="@+id/ll_msg"
    xmlns:android="http://schemas.android.com/apk/res/android" >

    <ImageView
        android:id="@+id/oa_img"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:padding="@dimen/sp12"
        android:layout_weight="1" />
    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/sp12"
            android:padding="@dimen/sp8"
            android:textSize="@dimen/sp12"

            android:textColor="@color/black"
            android:text="1111"/>

        <TextView
            android:layout_below="@+id/tv_name"
            android:id="@+id/tv_present"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/sp8"
            android:layout_marginBottom="@dimen/dp6"
            android:textSize="@dimen/sp12"
            android:textColor="@color/black"
            android:maxLines="1"
            android:ellipsize="end"
            android:text="1111"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">
        <TextView
            android:visibility="gone"
            android:id="@+id/tv_msg_num"
            android:layout_toLeftOf="@+id/iv_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dp10"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp8"
            android:textColor="@color/white"
            android:background="@drawable/shape_round_yellow"
            android:padding="@dimen/sp6"
            android:text="100"/>

        <ImageView
            android:id="@+id/iv_next"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/dp12"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:src="@mipmap/iv_go"/>
    </RelativeLayout>


</LinearLayout>
